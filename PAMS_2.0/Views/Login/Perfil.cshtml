@model PAMS_2._0.Data.ViewModel;
@{
    ViewData["Title"] = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-deck">
    <div class="card border-info">
        <div class="card-body">
            <img class="card-img" src='@Url.Action("GetImage", "Usuario", new {item=Model.listaUsuarios.First().id})' width="100" height="400" alt="Card image">

        </div>
    </div>
    <div class="card border-info">
        <div class="card-body">
            <h5 class="card-title font-weight-bold">Informacion del Perfil</h5>

            <div class="col-md-6">
                <p class="card-title font-weight-bold">@Html.DisplayNameFor(m => m.listaUsuarios.First().email)</p>
                <p class="card-text">@Model.listaUsuarios.First().email</p>
            </div>
            <div class="col-sm-6">
                <p class="card-title font-weight-bold">@Html.DisplayNameFor(m => m.listaUsuarios.First().rol)</p>
                <p class="card-text">@Model.listaUsuarios.First().rol</p>
            </div>
            <div class="col-sm-6">
                <p class="card-title font-weight-bold">@Html.DisplayNameFor(m => m.listaUsuarios.First().nombre)</p>
                <p class="card-text">@Model.listaUsuarios.First().nombre</p>
            </div>
            <div class="col-sm-6">
                <p class="card-title font-weight-bold">@Html.DisplayNameFor(m => m.listaUsuarios.First().apellido)</p>
                <p class="card-text">@Model.listaUsuarios.First().apellido</p>
            </div>
            <div class="col-sm-6">
                <p class="card-title font-weight-bold">@Html.DisplayNameFor(m => m.listaUsuarios.First().nacimiento)</p>
                <p class="card-text">@Model.listaUsuarios.First().nacimiento</p>
            </div>

        </div>
    </div>
   
</div>

@model PAMS_2._0.Data.ViewModel;
@{
    ViewData["Title"] = "Antecedentes Familiares";
}

<h1>Index</h1>


@if (Model.listaAntecedentesFamiliares == null)
{
    <p>No existen Registros.</p>

}
else if (Model.listaAntecedentesFamiliares.Count() > 0)
{
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h3>Antecedentes Familiares</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show " role="alert">
                        @TempData["message"]
                        <button type="button" class="close" date-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                
                <form method="post" asp-action="Edit" >

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="@Model.antecedentesFamiliares.intervencionQuirurgica" class="control-label"></label>
                        <input asp-for="@Model.antecedentesFamiliares.intervencionQuirurgica" class="form-control" />
                        <span asp-validation-for="@Model.antecedentesFamiliares.intervencionQuirurgica" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.antecedentesFamiliares.medicamentos" class="control-label"></label>
                        <input asp-for="@Model.antecedentesFamiliares.medicamentos" class="form-control" />
                        <span asp-validation-for="@Model.antecedentesFamiliares.medicamentos" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.antecedentesFamiliares.enfermedadGrave" class="control-label"></label>
                        <input asp-for="@Model.antecedentesFamiliares.enfermedadGrave" class="form-control" />
                        <span asp-validation-for="@Model.antecedentesFamiliares.enfermedadGrave" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.antecedentesFamiliares.accidentes" class="control-label"></label>
                        <input asp-for="@Model.antecedentesFamiliares.accidentes" class="form-control" />
                        <span asp-validation-for="@Model.antecedentesFamiliares.accidentes" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.antecedentesFamiliares.dispAuxiliar" class="control-label"></label>
                        <input asp-for="@Model.antecedentesFamiliares.dispAuxiliar" class="form-control" />
                        <span asp-validation-for="@Model.antecedentesFamiliares.dispAuxiliar" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Actualizar Datos" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>

}

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
@model PAMS_2._0.Data.ViewModel;
@{
    ViewData["Title"] = "Circulo Social";
}




@if (Model.listaCirculoSocial == null)
{
    <p>No existen Registros.</p>

}
else if (Model.listaCirculoSocial.Count() > 0)
{
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h3>Circulo Social</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show " role="alert">
                        @TempData["message"]
                        <button type="button" class="close" date-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                
                <form method="post" asp-action="Edit" asp-controller="CirSocial" >
                    <input type="hidden" asp-for="@Model.circuloSocial.idPaciente" />
                    <input type="hidden" asp-for="@Model.circuloSocial.id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="@Model.circuloSocial.laboral" class="control-label"></label>
                        <textarea  asp-for="@Model.circuloSocial.laboral" class="form-control" ></textarea>
                        <span asp-validation-for="@Model.circuloSocial.laboral" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="@Model.circuloSocial.social" class="control-label"></label>
                        <textarea asp-for="@Model.circuloSocial.social" class="form-control" ></textarea>
                                        <span asp-validation-for="@Model.circuloSocial.social" class="text-danger"></span>
                                                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.circuloSocial.vivienda" class="control-label"></label>
                        <textarea asp-for="@Model.circuloSocial.vivienda" class="form-control" ></textarea>
                                        <span asp-validation-for="@Model.circuloSocial.vivienda" class="text-danger"></span>
                                                    </div>
                 

                    <div class="form-group">
                        <input type="submit" value="Actualizar Datos" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>

}

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
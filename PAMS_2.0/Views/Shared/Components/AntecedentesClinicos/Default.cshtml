@model PAMS_2._0.Data.ViewModel;
@{
    ViewData["Title"] = "Antecedentes Clinicos";
}

<h1>Index</h1>


@if (Model.listaAntecedentesClinicos == null)
{
    <p>No existen Registros.</p>

}
else if (Model.listaAntecedentesClinicos.Count() > 0)
{
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h3>Antecedentes Familiares</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show " role="alert">
                        @TempData["message"]
                        <button type="button" class="close" date-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
            <form method="post" asp-action="Edit">
                <input hidden="hidden" asp-for="@Model.antecedentesClinicos.idPaciente" class="form-control" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="@Model.antecedentesClinicos.Patologico" class="control-label"></label>
                    <input asp-for="@Model.antecedentesClinicos.Patologico" class="form-control" />
                    <span asp-validation-for="@Model.antecedentesClinicos.Patologico" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.antecedentesClinicos.psicologico" class="control-label"></label>
                    <input asp-for="@Model.antecedentesClinicos.psicologico" class="form-control" />
                    <span asp-validation-for="@Model.antecedentesClinicos.psicologico" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.antecedentesClinicos.psiquiatrico" class="control-label"></label>
                    <input asp-for="@Model.antecedentesClinicos.psiquiatrico" class="form-control" />
                    <span asp-validation-for="@Model.antecedentesClinicos.psiquiatrico" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Actualizar Datos" class="btn btn-primary" />
                </div>
            </form>
            </div>
        </div>

    </div>

}

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
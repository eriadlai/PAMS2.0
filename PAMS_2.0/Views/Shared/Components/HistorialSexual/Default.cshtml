@model PAMS_2._0.Data.ViewModel;
@{ ViewData["Title"] = "Antecedentes Clinicos"; }




@if (Model.listaHistorialSexual == null)
{
    <p>No existen Registros.</p> }
else if (Model.listaHistorialSexual.Count() > 0)
{
    <div class="container">
       
        <div class="row">
            <div class="col-sm-10">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show " role="alert">
                        @TempData["message"]
                        <button type="button" class="close" date-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>}
                <hr />
                <div class="row">
                    <div class="col-sm-12">
                        <h5>Historial Sexual</h5>
                    </div>
                </div>
                <form method="post" asp-action="Edit" asp-controller="HisSexual">
                    <input type="hidden" asp-for="@Model.historialSexual.idPaciente" class="form-control" />
                    <input type="hidden" asp-for="@Model.historialSexual.id" class="form-control" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="@Model.historialSexual.abuso" class="control-label"></label>
                        <fieldset id="@Model.historialSexual.abuso">
                            Si: @Html.RadioButtonFor(model => model.historialSexual.abuso, true)
                            No: @Html.RadioButtonFor(model => model.historialSexual.abuso, false)

                        </fieldset>
                        <span asp-validation-for="@Model.historialSexual.abuso" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.historialSexual.traumas" class="control-label"></label>
                        <fieldset id="@Model.historialSexual.traumas">
                            Si: @Html.RadioButtonFor(model => model.historialSexual.traumas, true)
                            No: @Html.RadioButtonFor(model => model.historialSexual.traumas, false)

                        </fieldset>
                        <span asp-validation-for="@Model.historialSexual.traumas" class="text-danger"></span>
                    </div>
                    <div id="Traumas">
                        <div class="form-group">
                            <label asp-for="@Model.historialSexual.traumasInfo" class="control-label"></label>
                            <input asp-for="@Model.historialSexual.traumasInfo" class="form-control" />
                            <span asp-validation-for="@Model.historialSexual.traumasInfo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group" id="@Model.historialSexual.embarazo">
                        <label asp-for="@Model.historialSexual.embarazo" class="control-label"></label>

                        <fieldset id="@Model.historialSexual.embarazo">
                            Si: @Html.RadioButtonFor(model => model.historialSexual.embarazo, true)
                            No: @Html.RadioButtonFor(model => model.historialSexual.embarazo, false)
                        </fieldset>
                        <span asp-validation-for="@Model.historialSexual.embarazo" class="text-danger"></span>

                    </div>

                    <div id="Edad">
                        <div class="form-group">
                            <label asp-for="@Model.historialSexual.edad" class="control-label"></label>
                            <input type="number" asp-for="@Model.historialSexual.edad" min="11" class="form-control" />
                            <span asp-validation-for="@Model.historialSexual.edad" class="text-danger"></span>
                        </div>
                    </div>




                    <div class="form-group">
                        <label asp-for="@Model.historialSexual.preferenciaSexual" class="control-label"></label>
                        <input asp-for="@Model.historialSexual.preferenciaSexual" class="form-control" />
                        <span asp-validation-for="@Model.historialSexual.preferenciaSexual" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Actualizar Datos" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>}

<partial name="_ValidationScriptsPartial" />
<script>

    $(document).ready(function () {
        var result = $('[name="historialSexual.embarazo"]:checked').val();
        if (result == "True") {
            $("#Edad").show();
        } else if (result == "False") {
            $("#Edad").hide();
        }

    });
</script>

<script>
    $(document).ready(function () {
        $('input[name="historialSexual.embarazo"]').change(function () {
                var radioValue = $(this).val();
                var questionsDiv = $('#Edad');
                if (radioValue == "True") {
                    questionsDiv.show();
                } else if (radioValue == "False") {
                    questionsDiv.hide();
                    @{ Model.historialSexual.edad = 0;}
                }
            });
        });
</script>
<script>

    $(document).ready(function () {
        var result = $('[name="historialSexual.traumas"]:checked').val();
        if (result == "True") {
            $("#Traumas").show();
        } else if (result == "False") {
            $("#Traumas").hide();
        }

    });
</script>

<script>
    $(document).ready(function () {
        $('input[name="historialSexual.traumas"]').change(function () {
                var radioValue = $(this).val();
                var questionsDiv = $('#Traumas');
                if (radioValue == "True") {
                    questionsDiv.show();
                } else if (radioValue == "False") {
                    questionsDiv.hide();
                    @{ Model.historialSexual.traumasInfo = "";}
                }
            });
        });
</script>




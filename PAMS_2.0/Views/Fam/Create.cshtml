@model PAMS_2._0.Data.ViewModel;
@using System.IO;
@{ ViewData["Title"] = "Agregar Nuevo Familiar";
                Layout = "~/Views/Shared/_Layout.cshtml"; }


<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Agregar Nuevo Familiar</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Create" asp-controller="Fam">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    
                    @if (TempData["message"] != null)
                    {
                    <div class="alert alert-warning alert-dismissible fade show " role="alert">
                        @TempData["message"]
                        <button type="button" class="close" date-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                     }
                </div>

                <input type="hidden" asp-for="@Model.familiares.id" />
                <input type="hidden" asp-for="@Model.familiares.idPaciente" />
                <div class="form-group">
                    <label asp-for="@Model.familiares.nombre" class="control-label"></label>
                    <input asp-for="@Model.familiares.nombre" class="form-control" />
                    <span asp-validation-for="@Model.familiares.nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.familiares.apellido" class="control-label"></label>
                    <input asp-for="@Model.familiares.apellido" class="form-control" />
                    <span asp-validation-for="@Model.familiares.apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.familiares.nacimiento" class="control-label"></label>
                    <input asp-for="@Model.familiares.nacimiento" class="form-control" />
                    <span asp-validation-for="@Model.familiares.nacimiento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.familiares.ocupacion" class="control-label"></label>
                    <input asp-for="@Model.familiares.ocupacion" class="form-control" />
                    <span asp-validation-for="@Model.familiares.ocupacion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.familiares.parentesco" class="control-label"></label>
                    <input asp-for="@Model.familiares.parentesco" class="form-control" />
                    <span asp-validation-for="@Model.familiares.parentesco" class="text-danger"></span>
                </div>
              
                <div class="form-group">
                    <input type="submit" value="Crear Usuario" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>
@section Scripts{
    @{
  <partial name="_ValidationScriptsPartial" /> }
}

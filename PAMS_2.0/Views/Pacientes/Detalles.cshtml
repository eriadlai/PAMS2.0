@model PAMS_2._0.Data.ViewModel;
@{
    ViewData["Title"] = "Informacion paciente";
}


<div class="container">

    <hr />
    
    <div class="row">
      
            <div class="col-sm-10">
                <h5>Informacion del Paciente @Model.paciente.nombre @Model.paciente.apellido</h5>
            </div>
        
        <div class="col-sm-10">
            @{ var id = @Model.paciente.id;}
            <input type="hidden" asp-for="@id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.paciente.foto" class="control-label"></label>
                <img src='@Url.Action("GetImage", "Pacientes", new {item=@Model.paciente.id })' width="50" height="50" />
                <span asp-validation-for="@Model.paciente.foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.paciente.fechaRegistro" class="control-label"></label>
                <input asp-for="@Model.paciente.fechaRegistro" class="form-control" disabled />
                <span asp-validation-for="@Model.paciente.fechaRegistro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.paciente.ultimaActualizacion" class="control-label"></label>
                <input asp-for="@Model.paciente.ultimaActualizacion" class="form-control" disabled />
                <div class="form-group">
                    <label asp-for="@Model.paciente.nombre" class="control-label"></label>
                    <input asp-for="@Model.paciente.nombre" class="form-control" disabled />
                    <span asp-validation-for="@Model.paciente.nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.paciente.apellido" class="control-label"></label>
                    <input asp-for="@Model.paciente.apellido" class="form-control" disabled />
                    <span asp-validation-for="@Model.paciente.apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.paciente.nacimiento" class="control-label"></label>
                    <input asp-for="@Model.paciente.nacimiento" class="form-control" disabled />
                    <span asp-validation-for="@Model.paciente.nacimiento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.paciente.telefono" class="control-label"></label>
                    <input asp-for="@Model.paciente.telefono" class="form-control" disabled />
                    <span asp-validation-for="@Model.paciente.telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.paciente.actividadExtra" class="control-label"></label>
                    <input asp-for="@Model.paciente.actividadExtra" class="form-control" disabled />
                    <span asp-validation-for="@Model.paciente.actividadExtra" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.paciente.religion" class="control-label"></label>
                    <input asp-for="@Model.paciente.religion" class="form-control" disabled />
                    <span asp-validation-for="@Model.paciente.religion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.paciente.escolaridad" class="control-label"></label>
                    <input asp-for="@Model.paciente.escolaridad" class="form-control" disabled />
                    <span asp-validation-for="@Model.paciente.escolaridad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.paciente.ocupacion" class="control-label"></label>
                    <input asp-for="@Model.paciente.ocupacion" class="form-control" disabled />
                    <span asp-validation-for="@Model.paciente.ocupacion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.paciente.asunto" class="control-label"></label>
                    <input asp-for="@Model.paciente.asunto" class="form-control" disabled />
                    <span asp-validation-for="@Model.paciente.asunto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.paciente.direccion" class="control-label"></label>
                    <input asp-for="@Model.paciente.direccion" class="form-control" disabled />
                    <span asp-validation-for="@Model.paciente.direccion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.paciente.servicio" class="control-label"></label>
                    <input asp-for="@Model.paciente.servicio" class="form-control" disabled />
                    <span asp-validation-for="@Model.paciente.servicio" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</div>
    @section Scripts{
        @{
                            <partial name="_ValidationScriptsPartial" /> }
    }



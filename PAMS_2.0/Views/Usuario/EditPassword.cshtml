@model PAMS_2._0.Data.ViewModel;
@{
    ViewData["Title"] = "Edit password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Edit user password @Model.usuario.nombre @Model.usuario.apellido</h3>

        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            @if (TempData["message"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show " role="alert">
                    @TempData["message"]
                    <button type="button" class="close" date-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        <form method="post" asp-action="EditPassword">
            <input type="hidden" asp-for="@Model.usuario.id" />
            <input type="hidden" asp-for="@Model.usuario.fotoFile" accept="image/*" />
            <input type="hidden" asp-for="@Model.usuario.email" class="form-control" />
            <input type="hidden" asp-for="@Model.usuario.nacimiento" class="form-control" />
            <input type="hidden" asp-for="@Model.usuario.nombre" class="form-control" />
            <input type="hidden" asp-for="@Model.usuario.apellido" class="form-control" />
            <input type="hidden" asp-for="@Model.usuario.telefono" class="form-control" />
            <input type="hidden" asp-for="@Model.usuario.rol" class="form-control" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.usuario.password" class="control-label"></label>
                <input asp-for="@Model.usuario.password" class="form-control" />
                <span asp-validation-for="@Model.usuario.password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Edit Password" class="btn btn-primary" />
            </div>
        </form>
        </div>
    </div>

</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

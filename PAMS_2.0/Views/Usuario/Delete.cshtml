@model PAMS_2._0.Data.ViewModel;
@{
    ViewData["Title"] = "Delete user";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Delete User</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="DeleteUsuario">
                @{ var id = @Model.usuario.id;}
                <input type="hidden" asp-for="@id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.usuario.foto" class="control-label"></label>
                    <img src='@Url.Action("GetImage", "Usuario", new {item=@Model.usuario.id })' width="50" height="50" />
                    <span asp-validation-for="@Model.usuario.foto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.usuario.email" class="control-label"></label>
                    <input asp-for="@Model.usuario.email" class="form-control" disabled />
                    <span asp-validation-for="@Model.usuario.email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.usuario.password" class="control-label"></label>
                    <input asp-for="@Model.usuario.password" class="form-control" disabled />
                    <span asp-validation-for="@Model.usuario.password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.usuario.nacimiento" class="control-label"></label>
                    <input asp-for="@Model.usuario.nacimiento" class="form-control" disabled />
                    <span asp-validation-for="@Model.usuario.nacimiento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.usuario.nombre" class="control-label"></label>
                    <input asp-for="@Model.usuario.nombre" class="form-control" disabled />
                    <span asp-validation-for="@Model.usuario.nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.usuario.apellido" class="control-label"></label>
                    <input asp-for="@Model.usuario.apellido" class="form-control" disabled />
                    <span asp-validation-for="@Model.usuario.apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.usuario.telefono" class="control-label"></label>
                    <input asp-for="@Model.usuario.telefono" class="form-control" disabled />
                    <span asp-validation-for="@Model.usuario.telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.usuario.rol" class="control-label"></label>
                    <input asp-for="@Model.usuario.rol" class="form-control" disabled />
                    <span asp-validation-for="@Model.usuario.rol" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Delete User" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



@model PAMS_2._0.Data.ViewModel;
@using System.IO;
@{
    ViewData["Title"] = "Crear Nuevo Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear Nuevo Usuario</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form enctype="multipart/form-data" method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.usuario.fotoFile" class="control-label"></label>
                    <input asp-for="@Model.usuario.fotoFile" accept="image/*" />
                    <span asp-validation-for="@Model.usuario.fotoFile" class="text-danger"></span>
                    @if (TempData["message"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show " role="alert">
                            @TempData["message"]
                            <button type="button" class="close" date-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                </div>
               
                <div class="form-group">
                    <label asp-for="@Model.usuario.email" class="control-label"></label>
                    <input placeholder="correo@gmail.com" asp-for="@Model.usuario.email" class="form-control" />
                    <span asp-validation-for="@Model.usuario.email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.usuario.password" class="control-label"></label>
                    <input asp-for="@Model.usuario.password" class="form-control" />
                    <span asp-validation-for="@Model.usuario.password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.usuario.telefono" class="control-label"></label>
                    <input placeholder="0001234455" maxlength="10" asp-for="@Model.usuario.telefono" class="form-control" />
                    <span asp-validation-for="@Model.usuario.telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.usuario.nacimiento" class="control-label"></label>
                    <input asp-for="@Model.usuario.nacimiento" class="form-control" />
                    <span asp-validation-for="@Model.usuario.nacimiento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.usuario.nombre" class="control-label"></label>
                    <input placeholder="Nombre(s)" asp-for="@Model.usuario.nombre" class="form-control" />
                    <span asp-validation-for="@Model.usuario.nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.usuario.apellido" class="control-label"></label>
                    <input placeholder="Apellido(s)" asp-for="@Model.usuario.apellido" class="form-control" />
                    <span asp-validation-for="@Model.usuario.apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.usuario.rol" class="control-label"></label>
                    <select class="form-select" asp-for="@Model.usuario.rol">
                        <option value="Administrador">Administrador</option>
                        <option value="Psicologo">Psicologo</option>
                        <option value="Secretario">Secretario</option>
                        <option value="Otro">Otro</option>
                    </select>

                    <span asp-validation-for="@Model.usuario.rol" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear Usuario" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
        }
}
